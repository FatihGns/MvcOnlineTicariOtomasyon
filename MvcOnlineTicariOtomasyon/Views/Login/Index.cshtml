@model List<MvcOnlineTicariOtomasyon.Models.Entities.TodoList>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/jqvmap/jqvmap.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style>
        .chat-container {
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            border: 1px solid #ccc;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            height: 500px;
        }

        .chat-messages {
            flex: 1;
            list-style: none;
            padding: 10px;
            overflow-y: auto;
            margin: 0;
        }

            .chat-messages li {
                margin-bottom: 10px;
                display: flex;
                flex-direction: column;
                max-width: 70%;
            }

                .chat-messages li.other-message {
                    align-self: flex-start;
                    background: #e5e5ea;
                    border-radius: 10px 10px 10px 0;
                    padding: 5px 10px;
                }

                .chat-messages li.my-message {
                    align-self: flex-end;
                    background: #0b93f6;
                    color: white;
                    border-radius: 10px 10px 0 10px;
                    padding: 5px 10px;
                }

                .chat-messages li .name {
                    font-weight: bold;
                    font-size: 0.85em;
                    margin-bottom: 2px;
                }

        .chat-input {
            display: flex;
            padding: 10px;
            border-top: 1px solid #ccc;
        }

            .chat-input input[type="text"] {
                flex: 1;
                padding: 8px;
                border-radius: 20px;
                border: 1px solid #ccc;
                outline: none;
            }

            .chat-input button {
                margin-left: 10px;
                padding: 8px 15px;
                border: none;
                border-radius: 20px;
                background-color: #0b93f6;
                color: white;
                cursor: pointer;
            }

                .chat-input button:hover {
                    background-color: #0077cc;
                }
    </style>
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Small Boxes -->
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.d1</h3>
                        <p>Toplam Cari Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="/Statistic/Index" class="small-box-footer">Daha Fazlası <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.d2</h3>
                        <p>Toplam Ürün Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="/Statistic/Index" class="small-box-footer">Daha Fazlası <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.d3</h3>
                        <p>Kategori Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="/Statistic/Index" class="small-box-footer">Daha Fazlası <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.d4</h3>
                        <p>Şehir Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="/Statistic/Index" class="small-box-footer">Daha Fazlası <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Todo List -->
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="ion ion-clipboard mr-1"></i> Yapılacaklar</h3>
                    </div>
                    <div class="card-body">
                        <ul class="todo-list" data-widget="todo-list">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <li>
                                    <span class="handle">
                                        <i class="fas fa-ellipsis-v"></i>
                                        <i class="fas fa-ellipsis-v"></i>
                                    </span>
                                    <div class="icheck-primary d-inline ml-2">
                                        <input type="checkbox" value="" name="todo@i" id="todoCheck@i">
                                        <label for="todoCheck@i"></label>
                                    </div>
                                    <span class="text">@Model[i].Title</span>
                                    <small class="badge badge-danger"><i class="far fa-clock"></i></small>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer clearfix">
                        <button type="button" class="btn btn-info float-right"><i class="fas fa-plus"></i> Yeni Görev</button>
                    </div>
                </div>

                <!-- Canlı Destek -->
                <h2>Canlı Destek</h2>
                <div class="chat-container">
                    <ul id="discussion" class="chat-messages"></ul>
                    <div class="chat-input">
                        <input type="text" id="message" placeholder="Mesajınızı yazın..." />
                        <button id="sendmessage">Gönder</button>
                        <input type="hidden" id="displayname" />
                    </div>
                </div>
            </div>

            <!-- Grafik -->
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Müşteri Şehir Grafiği</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="chart-responsive">
                                    <canvas id="pieChart" height="50"></canvas>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <ul class="chart-legend clearfix">
                                    @for (int i = 0; i < ((List<string>)ViewBag.Sehirler).Count; i++)
                                    {
                                        <li><i class="far fa-circle text-danger"></i> @ViewBag.Sehirler[i] (@ViewBag.Sayilar[i])</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white p-0">
                        <ul class="nav nav-pills flex-column">
                            @if (ViewBag.Sehirler != null && ViewBag.Sayilar != null)
                            {
                                var sehirler = (List<string>)ViewBag.Sehirler;
                                var sayilar = (List<int>)ViewBag.Sayilar;
                                for (int i = 0; i < sehirler.Count; i++)
                                {
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            @sehirler[i]
                                            <span class="float-right text-success">
                                                <i class="fas fa-user text-sm"></i> @sayilar[i] Müşteri
                                            </span>
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a href="#" class="nav-link">Veri bulunamadı</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/2.4.2/jquery.signalR.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Pie Chart
        var ctx = document.getElementById("pieChart").getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Encode(ViewBag.Sehirler)),
                datasets: [{
                    data: @Html.Raw(Json.Encode(ViewBag.Sayilar)),
                    backgroundColor: ['#f56954', '#00a65a', '#f39c12', '#00c0ef', '#3c8dbc', '#d2d6de']
                }]
            }
        });

        // Canlı Destek
        $(function () {
            $('#displayname').val(prompt('Adınızı girin:', 'Admin'));
            var chat = $.connection.chatHub;

            chat.client.addNewMessageToPage = function (name, message) {
                var currentUser = $('#displayname').val();
                var msgClass = (name === currentUser) ? 'my-message' : 'other-message';
                $('#discussion').append('<li class="' + msgClass + '"><span class="name">' + $('<div/>').text(name).html() + '</span><p>' + $('<div/>').text(message).html() + '</p></li>');
                $('#discussion').scrollTop($('#discussion')[0].scrollHeight);
            };

            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    var msg = $('#message').val();
                    if (msg.trim() === '') return;
                    chat.server.send($('#displayname').val(), msg);
                    $('#message').val('').focus();
                });

                $('#message').keypress(function (e) {
                    if (e.which == 13) $('#sendmessage').click();
                });
            });
        });
    </script>
}
