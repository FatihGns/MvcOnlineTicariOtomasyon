@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div style="margin:10px 20px">
    <h2>Personel Satış</h2>
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Personel Adı: @ViewBag.dper</li>
    </ol>
    <br />
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
         
                <th scope="col">Ürün</th>
                <th scope="col">Cari</th>
                <th scope="col">Adet</th>
                <th scope="col">Fiyat</th>
                <th scope="col">Toplam</th>
                <th scope="col">Tarih</th>
                <th scope="col">Yazdır</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
       
                    <td>@item.Products.ProductName</td>
                    <td>@item.Carilers.CariName @item.Carilers.CariSurname </td>
                    <td>@item.Adet</td>
                    <td>@item.Fiyat.ToString("c")</td>
                    <td>@item.ToplamTutar</td>
                    <td>@item.Tarih.AddMonths(1).ToShortDateString()</td>
                    <td><a class="btn btn-info" href="#">Yazdır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-info" href="/Departman/Index">Geri Dön</a>
</div>