@model MvcOnlineTicariOtomasyon.Models.Entities.Cariler

@using (Html.BeginForm("CariBilgiGüncelle", "CariPanel", FormMethod.Post, new { @class = "form-horizontal" }))
{


    <div class="form-group row">

     
        @Html.HiddenFor(x => x.CariID)
        <label for="inputName" class="col-sm-2 col-form-label">Adı</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariName, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Soyad</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CariSurname, new { @class = "form-control" })

        </div>

    </div>
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Mail</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })

        </div>

    </div>
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })

        </div>

    </div>




    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-success">Bilgileri Güncele</button>

        </div>

    </div>

}
