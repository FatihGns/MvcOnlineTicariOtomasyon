@model List<MvcOnlineTicariOtomasyon.Models.Entities.SatisHareket>
@{
    ViewBag.Title = "Siparişlerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
    int count = 0;
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Products.ProductName</td>
            <td>@item.Fiyat.ToString("c")</td>
            <td>@item.Tarih.ToShortDateString()</td>
        </tr>
    }
</table>

