@using MvcOnlineTicariOtomasyon.Models.Entities
@model Category
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.7.0.js"></script>
<br />
<div style="margin:10px 20px">
    <h2>Yeni Kategori Sayfası</h2>
    <br />
    <form class="form-group" method="post">
        <label for="CategoryName">Kategori Adı</label>
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        <br />
        <button class="btn btn-info" id="Btn1">Kaydet</button>
        <script>
            $('#Btn1').click(function () {
                alert("Katergori Başarılı bir şekilde eklendi")
            })
        </script>
    </form>
</div>
