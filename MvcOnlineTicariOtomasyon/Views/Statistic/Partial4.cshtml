@model List<MvcOnlineTicariOtomasyon.Models.Entities.EntitiesGroup3>
<div class="card-header">
    <h3 class="card-title">Marka Hover Tablosu</h3>
</div>
<!-- /.card-header -->
<div class="card-body p-0">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Marka</th>
                <th>Progress</th>
                <th style="width: 40px">Label</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
            }
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count)</td>
                    <td>@item.Brand</td>
                    <td>
                        @if (item.Sayi == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-danger" style="width:@(10*item.Sayi)%"></div>
                            </div>
                        }
                        @if (item.Sayi == 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width:@(10*item.Sayi)%"></div>
                            </div>
                        }
                        @if (item.Sayi == 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-info" style="width:@(10*item.Sayi)%"></div>
                            </div>
                        }
                    </td>

                    @if (item.Sayi == 1)
                    {
                        <td><span class="badge bg-gradient-danger">@item.Sayi </span></td>
                    }
                    @if (item.Sayi == 2)
                    {
                        <td><span class="badge bg-gradient-warning">@item.Sayi </span></td>
                    }
                    @if (item.Sayi == 3)
                    {
                        <td><span class="badge bg-gradient-info">@item.Sayi</span></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.card-body -->