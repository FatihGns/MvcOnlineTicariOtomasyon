@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div style="margin:10px 20px ">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Görsel</th>
                <th scope="col">Personel Adı</th>
                <th scope="col">Personel Soyad</th>

                <th scope="col">Departman</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
                <th scope="col">Satışlar</th>

            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="2" class="text-center">Hiç Departman bulunamadı.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    count++;
        <tr>
            <td scope="row">@count</td>
            <td>
                <img src="@item.EmployeeImage" style="width:50px;border-radius:50px"  />
            </td>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>

            <td>@item.Department.DepartmentName</td>
            <td><a class="btn btn-danger" href="/Employee/DeleteEmployee/@item.EmployeeID">Sil</a></td>
            <td><a class="btn btn-warning" href="/Employee/UpdateEmployee/@item.EmployeeID">Güncelle</a></td>
            <td><a class="btn btn-group" style="background-color:plum" href="/Departman/DepartmanPersonelSatis/@item.EmployeeID">Detaylar</a></td>
        </tr>
                }
            }
        </tbody>
    </table>
    <br />
    <a class="btn btn-primary" href="/Employee/CreateEmployee">Personel Ekle</a>
</div>

